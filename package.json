{
  "name": "dns-sd",
  "version": "0.1.0",
  "description": "A DNS Service Discovery implementation in modern TypeScript",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "demo": "npx tsx demo/main.ts",
    "demo:browse": "npx tsx demo/browse.ts",
    "demo:publish": "npx tsx demo/publish.ts",
    "build": "vite build && tsc",
    "build:watch": "vite build --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "format": "prettier . --write --config ./prettier.config.mjs --plugin='@ianvs/prettier-plugin-sort-imports'",
    "lint": "tsc --noEmit --extendedDiagnostics && eslint .",
    "clean:out": "rimraf dist coverage",
    "clean:npm": "rimraf node_modules",
    "clean": "pnpm clean:out && pnpm clean:npm",
    "doc": "typedoc",
    "doc:serve": "serve docs"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "multicast-dns": "^7.2.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@types/dns-packet": "^5.6.5",
    "@types/multicast-dns": "^7.2.4",
    "@types/node": "^24.1.0",
    "@typescript-eslint/utils": "^8.38.0",
    "@vitest/coverage-v8": "3.2.4",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "serve": "^14.2.4",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.9",
    "typescript": "~5.8.3 ",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collight/dns-sd.git"
  },
  "keywords": [
    "dns-sd",
    "dns",
    "mdns",
    "service",
    "discovery",
    "bonjour",
    "zeroconf",
    "zero",
    "configuration",
    "multicast",
    "broadcast"
  ],
  "author": "Collight <collight@hotmail.com> (https://collight.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/collight/dns-sd/issues"
  },
  "homepage": "https://github.com/collight/dns-sd"
}
